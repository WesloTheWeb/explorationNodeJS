<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (products.length> 0) { %>
                    <ul class="cart__item-list">
                        <% products.forEach(p=> {
                            if (p.productId) { %>
                            <li class="cart__item">
                                <h2>
                                    <%= p.productId.title %> (<%= p.quantity %>) Cost: $<%= p.productId.price %>
                                </h2>
                                <form action="/cart-delete-item" method="POST">
                                    <input type="hidden" value="<%= p.productId._id %>" name="productId">
                                    <button class="btn danger" type="submit">Delete</button>
                                </form>
                            </li>
                            <% } }) %>
                    </ul>
                    <hr />
                    <section class="centered">
                        <form action="/create-order" method="POST">
                            <button type="submit" class="btn altButton">Generate Invoice</button>
                        </form>
                        <p>Choosing this option above will clear the cart and POST to the database and generate invoice on 'Orders' page</p>
                        <a class="btn stripeButton" href="/checkout">Go to Checkout</a>
                    </section>
                    <% } else { %>
                        <h1>No Products in Cart!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>