<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <h2>Checkout</h2>
                <ul class="cart__item-list">
                    <% products.forEach(p=> {
                        if (p.productId) { %>
                        <li class="cart__item">
                            <h2>
                                <%= p.productId.title %> (<%= p.quantity %>) Cost: $<%= p.productId.price %>
                            </h2>
                        </li>
                        <% } }) %>
                </ul>
                <div class="centered">
                    <h2>Subtotal: $<%= totalSum %>
                    </h2>
                    <h2>Sales Tax (10%): $<%= salesTax %>
                    </h2>
                    <h2>Total with Tax: $<%= totalWithTax %>
                    </h2>
                    <form action="/create-checkout-session" method="POST">
                        <button class="btnProperties checkOutButton" type="submit">Checkout</button>
                      </form>
                </div>

            </main>
            <%- include('../includes/end.ejs') %>