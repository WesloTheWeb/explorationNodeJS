<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <ul class="cart__item-list">
                    <% products.forEach(p=> {
                        if (p.productId) { %>
                        <li class="cart__item">
                            <h2>
                                <%= p.productId.title %> (<%= p.quantity %>) Cost: $<%= p.productId.price %>
                            </h2>
                        </li>
                        <% } }) %>
                </ul>
                <div class="centered">
                    <h2>Total: <%= totalSum %>
                    </h2>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>